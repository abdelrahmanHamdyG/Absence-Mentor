<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:weightSum="100"
    tools:context="ActivitesAndFragments.ActivityOfFragments">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:background="@drawable/item_drawable"
        android:weightSum="100"
        >
        <TextView
            android:id="@+id/textName1ProfileActivity"
            android:layout_width="0dp"
            android:layout_margin="@dimen/smallRightOrLeft"
            android:fontFamily="casual"
            android:layout_weight="30"
            android:textSize="@dimen/marginLargeTextSize"
            android:textColor="#3179B3"
            android:layout_height="match_parent"
            android:text="Name" />
        <TextView
            android:id="@+id/textName2ProfileActivity"
            android:layout_width="0dp"
            android:layout_weight="70"
            android:textSize="@dimen/marginLargeTextSize"
            android:fontFamily="casual"
            android:layout_height="match_parent"
            android:textColor="#3179B3"
            android:text="Name" />



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/item_drawable"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:weightSum="100"
        >

        <TextView
            android:id="@+id/textID1ProfileActivity"
            android:layout_width="0dp"
            android:layout_margin="2dp"
            android:fontFamily="casual"
            android:layout_weight="30"
            android:textSize="@dimen/marginLargeTextSize"
            android:textColor="#3179B3"
            android:layout_height="match_parent"
            android:text="ID" />
        <TextView
            android:id="@+id/textID2ProfileActivity"
            android:layout_width="0dp"
            android:layout_weight="70"
            android:fontFamily="casual"
            android:textColor="#3179B3"
            android:textSize="@dimen/marginLargeTextSize"
            android:layout_height="match_parent"
            android:text="14141" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/item_drawable"
        android:layout_weight="12"
        android:weightSum="100"
        >
        <TextView
            android:id="@+id/textGroups1ProfileActivity"
            android:textColor="#3179B3"
            android:layout_width="0dp"
            android:layout_margin="@dimen/smallRightOrLeft"
            android:layout_weight="30"
            android:textSize="@dimen/marginLargeTextSize"
            android:fontFamily="casual"
            android:layout_height="match_parent"
            android:text="Groups" />
        <TextView
            android:id="@+id/textGroups2ProfileActivity"
            android:layout_width="0dp"
            android:layout_weight="70"
            android:fontFamily="casual"
            android:textSize="@dimen/marginLargeTextSize"
            android:layout_height="match_parent"
            android:textColor="#3179B3"
            android:text="12" />



    </LinearLayout>




</LinearLayout>
