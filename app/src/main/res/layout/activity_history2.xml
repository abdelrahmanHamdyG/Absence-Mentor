<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="100"
    android:orientation="vertical"
    tools:context="com.abdelrahmanhamdy2.absencementor2.ActivitesAndFragments.History2Activity">



    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:id="@+id/toolbarHistory2"
        android:theme="@style/ActionBarTheme"
        android:background="@color/colorPrimary"
        ></androidx.appcompat.widget.Toolbar>

<androidx.drawerlayout.widget.DrawerLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:id="@+id/drawerHistory2"

    android:layout_weight="92">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100"
    android:orientation="horizontal"
    tools:context="com.abdelrahmanhamdy2.absencementor2.ActivitesAndFragments.History2Activity">



    <LinearLayout
        android:layout_width="0dp"
        android:id="@+id/presentsLayoutHistory2"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        android:layout_weight="50" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="100"
            android:orientation="vertical"
            >
            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:theme="@style/ActionBarTheme"
                android:background="@color/colorPrimary"
                android:id="@+id/toolbarPresentsHistory2"
                android:layout_weight="8"
                ></androidx.appcompat.widget.Toolbar>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/presentsRecyclerHistory2"
                android:layout_weight="92"
                android:layout_height="0dp">

            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>



    </LinearLayout>



    <LinearLayout
        android:id="@+id/absentsLayoutHistory2"
        android:layout_width="0dp"
        android:layout_margin="1dp"
        android:layout_height="match_parent"
        android:layout_weight="50"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="100"
            android:orientation="vertical"
            >
            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/toolbarAbsentHistory2"
                android:layout_weight="8"
                android:theme="@style/ActionBarTheme"
                android:background="@color/colorPrimary"
                ></androidx.appcompat.widget.Toolbar>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/absentsRecyclerHistory2"
                android:layout_height="0dp"
                android:layout_weight="92"
            ></androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_gravity="start"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/navigationHistory2"
        app:headerLayout="@layout/navigation_header"
        app:menu="@menu/menu_of_navigation"
        ></com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>
</LinearLayout>
