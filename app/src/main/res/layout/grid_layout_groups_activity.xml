<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:background="@drawable/grid_background_full"
    android:layout_margin="20dp"
    android:padding="10dp"
    android:layout_gravity="center_horizontal"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/name_grid_groups_activity"
        android:layout_margin="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TheName"
        android:textColor="#fff"
        android:textSize="@dimen/marginMediumTextSize"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-condensed"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/size_grid_groups_activity"
        android:layout_margin="@dimen/smallRightOrLeft"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="12"
        android:layout_weight="60"
        android:textColor="#fff"
        android:textSize="@dimen/marginMediumTextSize"
        android:layout_gravity="left"
        android:fontFamily="sans-serif-condensed"
        ></TextView>
        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="40"
            android:id="@+id/deleteGridView"
            android:background="@drawable/ic_delete_white_24dp"
            android:layout_marginRight="@dimen/smallRightOrLeft"

        ></androidx.appcompat.widget.AppCompatImageButton>
    </LinearLayout>



</LinearLayout>