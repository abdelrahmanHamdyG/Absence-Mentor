<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/id_back"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/dialogShowIdText"
        android:textSize="@dimen/marginMediumTextSize"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="#000"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Id is  213312  give this ID to yous students to be Entered in the students app" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/vertLargeRightOrLeft"
        android:layout_marginRight="@dimen/vertLargeRightOrLeft"
        android:textSize="@dimen/marginMediumTextSize"
        android:text="Okay"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/vertLargeRightOrLeft"
        android:id="@+id/buttonId"
        android:background="@drawable/drawable_enter_full"
        ></Button>

</LinearLayout>